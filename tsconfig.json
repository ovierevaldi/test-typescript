{
  "compilerOptions": {
   "lib": [
      "ES2021"
   ],
    "target": "ES2020",            
    "module": "nodenext",      
    "strict": true,               
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,         
    "outDir": "dist",            
    "rootDir": "src",              
    "moduleResolution": "nodenext",    
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
  },
  "include": ["src"],             
  "exclude": ["node_modules", "dist"] 
}